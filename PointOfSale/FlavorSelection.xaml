<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="FlavorSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width"
                        Value="180"></Setter>
                <Setter Property="Height"
                        Value="140"></Setter>
            </Style>

        </WrapPanel.Resources>
        <Button>

            <DockPanel >

                <TextBlock>
            Cherry
                </TextBlock>
            </DockPanel>

        </Button>

        <Button>

            <DockPanel>
                <TextBlock>
            Chocolate
                </TextBlock>
            </DockPanel>

        </Button>

        <Button>

            <DockPanel >
                <TextBlock>
            Cola
                </TextBlock>
            </DockPanel>

        </Button>

        <Button>

            <DockPanel >
                <TextBlock>
            Lime
                </TextBlock>
            </DockPanel>

        </Button>

        <Button>

            <DockPanel>
                <TextBlock>
            Orange
                </TextBlock>
            </DockPanel>

        </Button>

        <Button>

            <DockPanel>
                <TextBlock>
            Root Beer
                </TextBlock>
            </DockPanel>

        </Button>

        <Button>

            <DockPanel >
                <TextBlock>
            Vanilla
                </TextBlock>
            </DockPanel>

        </Button>
        <Grid>
            <TextBox TextWrapping="Wrap" Text="Add to Order" Margin="302,-355,55,297" FontSize="20" RenderTransformOrigin="0.507,-8.624"/>
        </Grid>

    </WrapPanel>

</Page>